body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background-image: url('Heavenly Inferno.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
            overflow: hidden; /* Görgetés letiltása */
        }

        h1 {
            color: white;
            font-size: 4rem;
            text-align: center;
            position: absolute;
            top: 10%;
            left: 50%;
            transform: translateX(-50%);
        }

        .container {
            position: relative;
            width: 100%;
            height: 100%;
        }

        .button {
            position: relative;
            padding: 15px 30px;
            font-size: 1.2rem;
            text-transform: uppercase;
            color: white;
            background-color: black;
            border-radius: 50px;
            text-decoration: none;
            transition: 0.3s ease;
            animation: pulsate 2s infinite;
        }

        /* Angyalok gomb pozicionálása */
        .button.angyal {
            top: 100%; /* Lefele az angyalok lábánál */
            left: 10%; /* Kicsit beljebb balról */
        }

        /* Halandók gomb pozicionálása */
        .button.halandok {
            top: 50%; /* Kicsit a cím alatt */
            left: 50%; /* Pontosan középen */
            transform: translateX(-50%);
        }

        /* Démonok gomb pozicionálása */
        .button.demon {
            top: 65%; /* Lefele a démonok lábánál */
            right: 10%; /* Kicsit beljebb jobbról */
        }

        .button:hover {
            background-color: #333;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        }

        @keyframes pulsate {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.05);
            }
            100% {
                transform: scale(1);
            }
        }